@model IEnumerable<CartDetailsViewModel>

@{
    ViewData["Title"] = "My Cart";
}

<main class="mt-3">
    <link rel="stylesheet" href="/text.css" type="text/css" />
    <div class="container justify-content-center">
        <h3 class="text-center">My Cart</h3>
        @if (Model.Count() > 0)
        {
            <table class="table table-hover table-striped text-center align-content-center" style="margin-left:15rem;margin-right:10rem;margin-top:23px">
                <thead>
                    <tr class="row">
                        <th scope="col" class="col-md-3">Name</th>
                        <th scope="col" class="col-md-3">Price</th>
                        <th scope="col" class="col-md-1">Remove</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="row">
                            <td class="col-md-3">@item.Title</td>
                            <td class="col-md-3">@item.Price</td>
                            <td class="col-md-1">
                                <a asp-controller="Carts" asp-action="Remove" asp-route-bookId="@item.Id" class="btn btn-danger">Remove</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="button-holder text-center">
                <a asp-controller="Carts" asp-action="Buy" class="btn btn-outline-primary">Proceed To Checkout</a>
            </div>
        }
        else
        {
            <h2 class="mt-3" style="text-align:center">There are no books in your cart.</h2>
        }
    </div>
</main>