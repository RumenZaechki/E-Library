@model IEnumerable<CartDetailsViewModel>

@{
    ViewData["Title"] = "My Cart";
}

<main class="mt-3">
    <link rel="stylesheet" href="/text.css" type="text/css" />
    <div class="container justify-content-center">
        <h3 class="text-center">My Cart</h3>
        @if (Model.Count() > 0)
        {
            <table class="table table-hover table-striped text-center">
                <thead>
                    <tr class="row">
                        <th scope="col" class="col-lg-5">Name</th>
                        <th scope="col" class="col-lg-5">Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="row">
                            <td class="col-lg-5">@item.Title</td>
                            <td class="col-lg-5">@item.Price</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="button-holder text-center">
                <a href="/Carts/Buy" class="btn btn-outline-primary">Buy</a>
            </div>
        }
        else
        {
            <h2 class="mt-3" style="text-align:center">There are no books in your cart.</h2>
        }
    </div>
</main>