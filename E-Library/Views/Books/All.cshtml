@using E_Library.Areas.Admin
@model AllBooksQueryModel
@{
    ViewData["Title"] = "All Books";
}

<form method="get">
    <div class="row">
        <div class="col-md-3">
            <label asp-for="SelectedCategory"></label>
            <select id="select" asp-for="SelectedCategory" class="form-control">
                <option value="">All</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Value">@category.Value</option>
                }
            </select>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="SearchTerm">Search</label>
                <input class="form-control" asp-for="SearchTerm">
            </div>
        </div>
        <div class="col-md-1">
            <button class="btn btn-primary" style="margin: 0; position: absolute; top: 10%;">Search</button>
        </div>
    </div>
</form>
<div style="width:20px; height:20px"></div>
<div class="row">
    @foreach (var book in Model.AllBooks)
    {
        <div class="card" style="width: 18rem; margin:0 auto;[B]padding:20px 0;[/B]">
            <img src="@book.ImageUrl" class="card-img-top" alt="@book.Author">
            <div class="card-body">
                <h5 class="card-title">@book.Title</h5>
                <p class="card-text">
                    @book.Author       Released: @book.Release
                </p>
                <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" class="btn btn-primary">Details</a>
                @if (User.IsInRole(AdminConstants.AdminRoleName))
                {
                    <a asp-controller="Books" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-warning">Edit</a>
                    <a class="btn btn-block btn-danger" href="/Books/Delete?id=@book.Id">Delete</a>
                }
            </div>
        </div>
    }
</div>
<div style="width:20px; height:20px"></div>
<div class="row">
    <div class="col-md-6">
        <a class="btn btn-primary"
           asp-controller="Books"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage - 1)"
           asp-route-selectedCategory="@Model.SelectedCategory"
           asp-route-searchTerm="@Model.SearchTerm">Previous</a>
    </div>
    <div class="col-md-6">
        <a class="btn btn-primary" style="float:right;"
           asp-controller="Books"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-selectedCategory="@Model.SelectedCategory"
           asp-route-searchTerm="@Model.SearchTerm">Next</a>
    </div>
</div>