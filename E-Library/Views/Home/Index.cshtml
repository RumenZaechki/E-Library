@model IEnumerable<BookListingViewModel>
@{
    ViewData["Title"] = "Home Page";
}

@{
    var firstBook = Model.ToList().Any() ? Model.ToList()[0] : null;
    var secondBook = Model.ToList().Count > 1 ? Model.ToList()[1] : null;
    var thirdBook = Model.ToList().Count > 2 ? Model.ToList()[2] : null;
}

@{
    if (!Model.Any())
    {
        <div class="jumbotron">
            <h1 class="display-4">Welcome</h1>
            <p class="lead">There are no books in the system as of yet.</p>
            <hr class="my-4">
        </div>
    }
    else
    {
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel"
         style="width: 30rem; margin: auto;">
            <div class="carousel-inner">
                @if (firstBook != null)
                {
                    <div class="carousel-item active">
                        <img src="@firstBook.ImageUrl" class="d-block w-100" alt="@firstBook.Title">
                        <div class="carousel-caption d-none d-md-block">
                            <h4><a class="btn btn-primary" style="height: 40px; width:80px;" asp-controller="Books" asp-action="Details" asp-route-id="@firstBook.Id">Details</a></h4>
                        </div>
                    </div>
                }
                @if (secondBook != null)
                {
                    <div class="carousel-item">
                        <img src="@secondBook.ImageUrl" class="d-block w-100" alt="@secondBook.Title">
                        <div class="carousel-caption d-none d-md-block">
                            <h4><a class="btn btn-primary" style="height: 40px; width:80px;" asp-controller="Books" asp-action="Details" asp-route-id="@secondBook.Id">Details</a></h4>
                        </div>
                    </div>
                }
                @if (thirdBook != null)
                {
                    <div class="carousel-item">
                        <img src="@thirdBook.ImageUrl" class="d-block w-100" alt="@thirdBook.Title">
                        <div class="carousel-caption d-none d-md-block">
                            <h4><a class="btn btn-primary" style="height: 40px; width:80px;" asp-controller="Books" asp-action="Details" asp-route-id="@thirdBook.Id">Details</a></h4>
                        </div>
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    }
}