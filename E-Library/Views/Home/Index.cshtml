@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

@{
    var books = Model.RecentlyAddedBooks;
    var firstBook = books.ToList().Any() ? books.ToList()[0] : null;
    var secondBook = books.ToList().Count > 1 ? books.ToList()[1] : null;
    var thirdBook = books.ToList().Count > 2 ? books.ToList()[2] : null;
}

@{
    if (!books.Any())
    {
        <div class="jumbotron">
            <h1 class="display-4">Welcome</h1>
            <p class="lead">There are no books in the system as of yet.</p>
            <hr class="my-4">
        </div>
    }
    else
    {
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel"
         style="width: 30rem; margin: auto;">
            <div class="carousel-inner">
                @if (firstBook != null)
                {
                    <div class="carousel-item active">
                        <img src="@firstBook.ImageUrl" class="d-block w-100" alt="@firstBook.Title" style="width:30rem; height:50rem;">
                        <div class="carousel-caption d-none d-md-block">
                            <h4><a class="btn btn-primary" style="height: 40px; width:80px;" asp-controller="Books" asp-action="Details" asp-route-id="@firstBook.Id">Details</a></h4>
                        </div>
                    </div>
                }
                @if (secondBook != null)
                {
                    <div class="carousel-item">
                        <img src="@secondBook.ImageUrl" class="d-block w-100" alt="@secondBook.Title" style="width:30rem; height:50rem;">
                        <div class="carousel-caption d-none d-md-block">
                            <h4><a class="btn btn-primary" style="height: 40px; width:80px;" asp-controller="Books" asp-action="Details" asp-route-id="@secondBook.Id">Details</a></h4>
                        </div>
                    </div>
                }
                @if (thirdBook != null)
                {
                    <div class="carousel-item">
                        <img src="@thirdBook.ImageUrl" class="d-block w-100" alt="@thirdBook.Title" style="width:30rem; height:50rem;">
                        <div class="carousel-caption d-none d-md-block">
                            <h4><a class="btn btn-primary" style="height: 40px; width:80px;" asp-controller="Books" asp-action="Details" asp-route-id="@thirdBook.Id">Details</a></h4>
                        </div>
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    }
}
<div style="width:20px; height:20px"></div>
<div class="jumbotron">
    <div class="row">
        <h2 id="totalBooks" class="col-md-4 text-center" style="width:30rem; margin:auto"></h2>
        <h2 id="totalUsers" class="col-md-4 text-center" style="width:30rem; margin:auto"></h2>
    </div>
</div>

@section Scripts{
    <script>
        $.get('/api/statistics', (data) => {
            $('#totalBooks').text(data.totalBooks + ' Books');
            $('#totalUsers').text(data.totalUsers + ' Users');
        });
    </script>
}