@model BookFormModel


<div class="container">
    <div class="row">
        <div class="col-xl-6 offset-lg-2 col-lg-8 col-sm-12">
            <h2>Add Book to Library</h2>

            <div asp-validation-summary="All"></div>

            <form method="post">
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input class="form-control" asp-for="Title">
                    <span asp-validation-for="Title" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <textarea class="form-control" asp-for="Description" rows="4"></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price">Price</label>
                    <input class="form-control" asp-for="Price">
                    <span asp-validation-for="Price" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl">ImageUrl</label>
                    <input class="form-control" asp-for="ImageUrl">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Release">Release</label>
                    <input class="form-control" asp-for="Release">
                    <span asp-validation-for="Release" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Publisher">Publisher</label>
                    <input class="form-control" asp-for="Publisher">
                    <span asp-validation-for="Publisher" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Author">Author</label>
                    <input class="form-control" asp-for="Author">
                    <span asp-validation-for="Author" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AuthorDescription">Author Description</label>
                    <textarea class="form-control" asp-for="AuthorDescription" rows="6"></textarea>
                    <span asp-validation-for="AuthorDescription" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AuthorImage">Author Image Url</label>
                    <input class="form-control" asp-for="AuthorImage">
                    <span asp-validation-for="AuthorImage" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" class="form-control">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="small text-danger"></span>
                </div>
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>